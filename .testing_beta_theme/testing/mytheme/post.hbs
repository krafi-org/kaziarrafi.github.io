{{!< default}}
{{#post}}
<artical>
<header class="post__background-image"
style="background-image: url({{feature_image}})">
    <div class="post__background-image-text">
        <h1 class="title has-text-white">{{title}}</h1>
    <time class="subtitle has-text-white">{{date format="DD MMMM YYYY"}}

    </time>
    </div>
